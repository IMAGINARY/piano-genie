doctype html
html
  - body = { class: [] };
  - main = { class: [] };
  block init
  head
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, viewport-fit=cover')
    meta(property="og:url", content!=config.siteURL)
    meta(property="og:type", content="website")
    meta(property="og:title", content!=config.siteName)
    meta(property="og:image", content="")
    meta(name="description", content!=(description || config.siteDescription))
    meta(property="og:description", content!=(description || config.siteDescription))
    block meta
    link(rel="icon", type="image/png", href="assets/img/favicon.png")
    link(rel="stylesheet", href="assets/css/default.css")
    block stylesheets
    title
      != (title ? title + ' - ' + config.siteName : config.siteName )
    block head
  body(class!=body.class.join(' '))
    block body
    script(type="text/javascript", src="vendor/magenta/music-1.3.1.js")
    block scripts
    script(type="text/javascript", src="assets/js/dependencies.min.js")
    script(type="text/javascript", src="assets/js/bundle.min.js")
    block closing
